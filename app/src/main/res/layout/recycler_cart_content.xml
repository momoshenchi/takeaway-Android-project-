<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
<ImageView
        android:id="@+id/goods_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/eye_img"
        android:scaleType="centerCrop"/>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
    >
    <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
        android:text="五花肉"
        />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
        >
        <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/themeorange"
                android:textSize="16sp"
                android:layout_alignBottom="@id/goods_sub"
                android:text="@string/money_name"
                />
        <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/themeorange"
                android:layout_toRightOf="@+id/money"
                android:textSize="18sp"
                android:layout_alignBottom="@id/goods_sub"
            android:text="8.94"
            />
        <TextView
                android:id="@+id/origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/total_price"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@id/goods_sub"
                android:textSize="14sp"
                android:text="￥13.23"
                />
        <ImageButton
                android:id="@+id/goods_sub"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@color/background"
                android:scaleType="centerCrop"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/goods_number"
                android:src="@mipmap/jianqu"
                android:visibility="invisible"
                />
        <TextView
                android:id="@+id/goods_number"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:textColor="#000"
                android:text="1"
                android:visibility="invisible"
                android:textSize="25sp"
                android:layout_toLeftOf="@id/goods_add"
                android:layout_marginRight="15dp"
                />
        <ImageButton
                android:id="@+id/goods_add"
                android:layout_width="33dp"
                android:layout_alignParentRight="true"
                android:layout_height="33dp"
                android:background="@color/background"
                android:scaleType="centerCrop"
                android:baselineAlignBottom="true"
                android:src="@mipmap/tianjia"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>