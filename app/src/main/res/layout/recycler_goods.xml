<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

    <ImageView
            android:id="@+id/goods_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp">

        <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="福满多"

                />

        <TextView
                android:id="@+id/goods_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="羊肉串2串+牛肉串2串+骨肉相连"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp" />

        <TextView
                android:id="@+id/goods_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="月售102" />

        <TextView
                android:id="@+id/goods_vipprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#E85C5A"
                android:text="品牌会员价￥31.9" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <RelativeLayout
                    android:id="@+id/rl_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#E85C5A"
                    android:text="￥"
                    android:gravity="bottom"
                    android:paddingBottom="0dp"
                     />

            <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E85C5A"
                    android:text="68"
                    android:gravity="bottom"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/money"
                    android:layout_toRightOf="@+id/money"
                  />
            </RelativeLayout>
            <ImageButton
                    android:id="@+id/goods_sub"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/background"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/goods_number"
                    android:src="@mipmap/jianqu"
                    android:visibility="invisible"
                    />
            <TextView
                    android:id="@+id/goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:textColor="#000"
                    android:text="1"
                    android:visibility="invisible"
                    android:textSize="25sp"
                    android:layout_toLeftOf="@id/goods_add"
                    android:layout_marginRight="15dp"
                     />
            <ImageButton
                    android:id="@+id/goods_add"
                    android:layout_width="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="33dp"
                    android:background="@color/background"
                    android:scaleType="centerCrop"
                    android:baselineAlignBottom="true"
                    android:src="@mipmap/tianjia"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>