<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/background">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
                android:id="@+id/retail_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_shape"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/glgs" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌故事"
                        android:textColor="#000"
                        />

                <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp">

                    <TextView
                            android:id="@+id/story"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品牌故事"
                            android:textColor="#000"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_toRightOf="@+id/story"
                            android:text="  |  立志打造高品质的烧烤"
                            android:textColor="#000"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                </RelativeLayout>

                <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/jianqu" />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:text="串意十足烧烤店是一家立志打造高品质的烧烤连锁品牌.我们十分" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/retail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_shape"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintTop_toBottomOf="@+id/retail_head">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="串意十足烧烤店(新天地店)"
                            android:textColor="#000"
                            android:textSize="18sp" />

                    <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="浙江省杭州市下城区东新街道东文街86号森望地下商城B1层B05-B1号" />
                </LinearLayout>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:src="@mipmap/jianqu"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/eye_img"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop" />

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/eye_img"
                        android:layout_marginRight="10dp"

                        android:scaleType="centerCrop" />

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/eye_img"
                        android:layout_marginRight="10dp"

                        android:scaleType="centerCrop" />

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/eye_img"
                        android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家信息"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家品类:烧烤 / 炸鸡炸串"
                    android:layout_marginTop="12dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="营业时间: 16:00-03:00"
                    android:layout_marginTop="12dp" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看营业资质"
                    android:layout_gravity="center"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_shape" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/retail_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/retail_info"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_shape"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家服务"
                    android:textColor="#000"
                    android:textSize="20sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="该商品已购买食品安全责任险,食品安全有保障"
                    android:layout_marginTop="12dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="该商家支持开发票,请在下单时填写好发票抬头"
                    android:layout_marginTop="12dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支持订单极速退款"
                    android:layout_marginTop="12dp" />
        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/retail_service"
                android:text="举报商家"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_shape" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>